{
  "name": "simple-html-template",
  "displayName": "Simple HTML Template",
  "description": "Helper for SHT, Simple HTML Template",
  "version": "0.0.4",
  "publisher": "phonglk",
  "engines": {
    "vscode": "^1.10.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.shtCompileFolder",
    "onCommand:extension.shtWatchFolder"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.shtCompileFolder",
        "title": "SHT: Compile Folder"
      },
      {
        "command": "extension.shtWatchFolder",
        "title": "SHT: Watch Folder"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.shtCompileFolder",
          "group": "navigation@1"
        },
        {
          "command": "extension.shtWatchFolder",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "eslint": "^3.6.0",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  },
  "dependencies": {
    "sht": "^1.0.4"
  }
}
